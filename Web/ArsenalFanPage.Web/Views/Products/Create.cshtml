@model ArsenalFanPage.Web.ViewModels.Product.ProductCreateInputModel
@{
    this.ViewData["Title"] = "Add Product";
    var categories = Model.Categories.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}

<h1>@this.ViewData["Title"]</h1>

<hr />
<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div>
        <label style="color:white" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <hr />

    <div>
        <label style="color:white" asp-for="ProductCategoryId"></label>
        <select asp-for="ProductCategoryId" asp-items="categories" class="form-control"></select>
        <span style="color:white" asp-validation-for="ProductCategoryId" class="text-danger"></span>
    </div>

    <hr />
    <div>
        <label style="color:white" asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <hr />

    <div>
        <label style="color:white" asp-for="Image">Photo</label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>



    <div>
        <label style="color:white" asp-for="Price">Price of the Product</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>

    </div>

    <div>
        <label style="color:white" asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>

    </div>


    <hr />
    <button style="color:white" type="submit" class="btn btn-primary">Submit Product</button>
</form>
