<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Arsenal @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,600&display=swap" rel="stylesheet">

    <!-- CSS Libraries -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="lib/slick/slick.css" rel="stylesheet">
    <link href="lib/slick/slick-theme.css" rel="stylesheet">

</head>
    


    <body style="background-color:black;">
        <div class="top-bar">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="tb-contact">
                            <p><i class="fas fa-envelope"></i>Arsenalfans@gmail.com</p>
                            <p><i class="fas fa-phone-alt"></i>+359893004576</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="nav-bar">
            <div class="container">
                <nav class="navbar navbar-expand-md bg-dark navbar-dark">

                    <ul class="navbar-nav mr-auto">

                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">News</a>
                        </li>

                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-controller="History" asp-action="News">History</a>
                        </li>

                        <li class="nav-item active">
                            <a href="/Table" class="nav-item nav-link">Table</a>
                        </li>

                        <li class="nav-item active">
                            <a href="/Identity/Account/Login" class="nav-item nav-link">Players</a>
                        </li>

                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-controller="News" asp-action="Create">Create News</a>
                        </li>

                    </ul>
                    @if (!this.User.Identity.IsAuthenticated)
                    {

                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a href="/Identity/Account/Login" class="nav-item nav-link">Login</a>
                            </li>
                            <li class="nav-item active">
                                <a href="/Identity/Account/Register" class="nav-item nav-link">Register</a>
                            </li>
                        </ul>
                    }
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a href="/Identity/Account/Logout" class="nav-item nav-link">Logout</a>
                            </li>
                        </ul>
                    }


                </nav>
            </div>
        </div>
        <div class="container">
            <main role="main" class="pb-3">

                @RenderBody()
            </main>

        </div>

        @*footer*@
        <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <div class="footer-widget">
                            <h3 class="title">Get in Touch</h3>
                            <div class="contact-info">
                                <p><i class="fa fa-map-marker"></i>1632 Ovcha Kupel 1, SF, Bulgaria</p>
                                <p><i class="fa fa-envelope"></i>ArsenalFans@Gmail.com</p>
                                <p><i class="fa fa-phone"></i>+359893004576</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="footer-widget">
                            <h3 class="title">Useful Links</h3>
                            <ul>
                                <li><a href="#">Lorem ipsum</a></li>
                                <li><a href="#">Pellentesque</a></li>
                                <li><a href="#">Aenean vulputate</a></li>
                                <li><a href="#">Vestibulum sit amet</a></li>
                                <li><a href="#">Back to the top</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="footer-widget">
                            <h3 class="title">Quick Links</h3>
                            <ul>
                                <li><a href="/">News</a></li>
                                <li><a href="/Identity/Account/Login">Login</a></li>
                                <li><a href="/Identity/Account/Register">Register</a></li>
                                <li><a href="/">Arsenal Offical Page</a></li>
                                <li><a href="#">Back to the top</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="footer-widget">
                            <h3 class="title">Newsletter</h3>
                            <div class="newsletter">
                                <p>
                                    Coming soon...
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
        <script src="lib/easing/easing.min.js"></script>
        <script src="lib/slick/slick.min.js"></script>

        @RenderSection("Scripts", required: false)

        <!-- Template Javascript -->
        <script src="js/main.js"></script>
    </body>
</html>
